<?xml version="1.0" encoding="utf-8" ?>
<widget id="GroupBoxPlus.widget.GroupBoxPlus" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>GroupBoxPlus</name>
    <description>The description of this widget.</description>

    <icon />

    <properties>

        <property key="roleMaps" type="object" required="false" isList="true">
            <caption>Appearance per Role</caption>
            <category>Appearance</category>
            <description>The message visible within the widget.</description>
            <properties>
              <property key="role" type="string">
                <caption>Role</caption>
                <category>Appearance</category>
                <description>The user role.</description>
              </property>
              <property key="view" type="boolean" defaultValue="true">
                <caption>Start Open?</caption>
                <category>Appearance</category>
                <description>If yes, the group box starts expanded, else it starts collapsed.</description>
              </property>
            </properties>
        </property>
        <property key="mfToExecute" type="microflow" required="false" defaultValue="">
            <caption>Microflow</caption>
            <category>Behavior</category>
            <description>The microflow to execute on click.</description>
            <returnType type="Boolean" />
        </property>
    </properties>
</widget>
